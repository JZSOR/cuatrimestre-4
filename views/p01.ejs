<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel ="stylesheet" href = "/bootstrap/css/bootstrap.min.css">
</head>
<body class="container">


<%- include('partials/header.ejs') %>
<%- include('partials/nav.ejs')%>

<div class="container">
    <center>
        <h3>
            Practica de multiplicar del  <%=numero%>
        </h3>
    </center>

</div>
<% if (numero) { %>
    <section class="mt-5">
        <center>
            <table class="table table-bordered w-50">
                <tbody>
                    <% for (let i = 1; i <= 10; i++) { %>
                        <tr>
                            <td><%= numero %> x <%= i %></td>
                            <td><%= numero * i %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </center>
    </section>
    <% } %>

<section class="container-mt-5">
    <center>
    <div.class= "container-mt-5">
        <form action="multiplo" method="post" class="mb-3">
            <div class="form-group">
                <label class="form-control mb-3" for="numero">numero</label>
                <input type="text" name="numero" id="numero" class="form-control mb-3" required>

            </div>
            <button class="btn btn-primary" type="submit">Enviar</button>
            <a href="/p01" class="btn btn-secondary">Limpiar</a>

        </form>
    </center>

</section>


<%- include('partials/footer.ejs')%>
</body>
</html>
